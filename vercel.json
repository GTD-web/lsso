{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["src/**", "libs/**", "views/**", "public/**", "dist/**"],
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/public/$1",
            "headers": {
                "Cache-Control": "public, max-age=86400"
            }
        },
        {
            "src": "/(.*)",
            "dest": "api/index.ts",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        }
    ],
    "crons": [
        {
            "path": "/api/auth/cron/clean-up/token",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/health",
            "schedule": "*/5 * * * *"
        }
    ]
}
